{
  "hosting": {
    "public": "/",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html",
        "type" : "301"
      }
    ],
    "redirects" : [
      {
        "source" : "/events",
        "destination" : "/event",
        "type" : "301"
      },
      {
        "source" : "/EVENT",
        "destination" : "/event",
        "type" : "301"
      }
      ]
  }
}
